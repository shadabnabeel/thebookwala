<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <android.support.v7.widget.CardView

        android:id="@+id/cart_card"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="10.5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/cart_item_img"
                android:layout_width="140dp"
                android:layout_height="150dp" />

            <TextView
                android:id="@+id/cart_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="160dp"
                android:gravity="right"
                android:fontFamily="@font/roboto"
                android:text="Book Name"
                android:textColor="#000000"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/cart_item_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:layout_below="@+id/cart_item_name"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="160dp"
                android:layout_marginTop="10dp"
                android:gravity="right"
                android:text="Author"
                android:textColor="#000000"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/cart_item_price"
                android:layout_width="wrap_content"
                android:fontFamily="@font/roboto"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cart_item_author"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:text="Book Price"
                android:textColor="#000000"
                android:textSize="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:layout_below="@+id/cart_item_author"
                android:layout_marginTop="10dp"
                android:layout_toLeftOf="@id/cart_item_rstag1"
                android:text="Unit Price :"
                android:textColor="@color/icons"
                android:textSize="12sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/cart_item_rstag1"
                android:layout_width="26dp"
                android:fontFamily="@font/roboto"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cart_item_author"
                android:layout_toLeftOf="@+id/cart_item_price"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Rs ."
                android:textColor="#000000"
                android:textSize="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:layout_below="@+id/cart_item_rstag1"
                android:layout_marginTop="15dp"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@id/qty"
                android:text="Quantity : X"
                android:textColor="@color/icons"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/qty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:layout_below="@+id/cart_item_price"
                android:layout_alignParentRight="true"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:text="Quantity"
                android:textColor="#000000"
                android:textSize="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:text="Total Price : "
                android:textStyle="bold"
                android:textSize="12sp"
                android:textColor="@color/icons"
                android:layout_toLeftOf="@+id/cart_item_rstag2"
                android:layout_below="@id/qty"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:id="@+id/cart_item_rstag2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:layout_below="@+id/qty"
                android:layout_toLeftOf="@+id/Tprice"
                android:layout_marginTop="10dp"
                android:text="Rs ."
                android:textColor="#000000"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/Tprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:layout_below="@+id/qty"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Total Price"
                android:textColor="#000000"

                android:textSize="12dp" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>